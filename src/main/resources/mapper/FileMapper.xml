<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ebstudytemplates3week.mapper.FileMapper">

    <insert id="addFile">
        INSERT INTO file (board_id, origin_name, stored_name)
        VALUES (#{boardId}, #{originName}, #{storedName})
    </insert>

    <select id="getFileByBoardId">
        SELECT *
        FROM file
        WHERE board_id = #{boardId}
    </select>

    <select id="getFileInfoByFileId">
        SELECT *
        FROM file
        WHERE id = #{id}
    </select>

</mapper>